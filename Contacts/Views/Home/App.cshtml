@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<title>App</title>
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.tmpl.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/amplify.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/underscore.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/backbone.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/backbone-mvc-sync.js ")" type="text/javascript"></script>   
	<!-- use below to use localstorage - session storage -->	
    @*<script src="@Url.Content("~/Scripts/backbone-amplifySessionStorage.js")" type="text/javascript"></script>    *@
    
    <script src="@Url.Content("~/Scripts/backbone.modelbinding.js")" type="text/javascript"></script> 
	<script src="@Url.Content("~/Scripts/backbone.marionette.js")" type="text/javascript"></script>

	<script src="@Url.Content("~/Scripts/app2.js")" type="text/javascript"></script>
	<style>
	#contactsRegion
	{
		float: left;
		width: 200px;
	}
	#mainRegion
	{
		float: left;
	}
	.remove-contact
	{
		color:red;
		text-decoration:underline;
		cursor:pointer;
	}
	</style>
</head>
<body>
	<h3>Simple View Switching Demo with Backbone</h3>
	<div id="navigation">
		<a href="http://localhost/Contacts/Home/App/#viewone">View One</a>
		 <a href="http://localhost/Contacts/Home/App/#viewtwo">View Two</a>
	</div>
	<div id="contactsRegion"></div>
	<div id="mainRegion">
	</div>

<!-- Templates -->
<script type="text/template" id="viewone-template">
	<p>This is View One</p>
</script>

<script type="text/template" id="viewtwo-template">
	<p>This is View Two</p>
</script>

<script type="text/template" id="contact-template">
	<span class="remove-contact">Remove</span> ${firstname} ${lastname}
</script>

<script type="text/template" id="add-contact-template">
<fieldset>
    <legend>Add Contact</legend>
    <label for="firstname">First Name:</label><input type="text" id="firstname" /><br/>
    <label for="lastname">Last Name:</label><input type="text" id="lastname" /><br/>
    <input type="button" id="addContact_button" value="Add" />
</fieldset>
</script>

</body>
</html>
